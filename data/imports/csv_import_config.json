  "database_mapping": {
    "文件類型": "doc_type",
    "公文字號": "doc_number", 
    "日期": "doc_date",
    "主旨": "subject",
    "發文單位": "sender",
    "受文單位": "receiver",
    "收發狀態": "status",
    "收文日期": "receive_date",
    "類別": "category",
    "字": "doc_zi",
