    "receive_electronic": {
      "receive_date_field": "收文日期", 
      "status_field": "狀態",
      "description": "電子收文"
    },
    "sent_paper": {
      "receive_date_field": "使用者確認",
      "status_field": "狀態", 
      "description": "紙本發文"
    },
    "receive_paper": {
      "receive_date_field": "收文日期",
      "status_field": "狀態",
      "description": "紙本收文"
    }
  },
  "final_columns": [
    "流水號",
    "文件類型", 
    "公文字號",
    "日期",
    "公文日期",
    "類別",
    "字",
    "文號", 
    "主旨",
    "發文單位",
    "受文單位",
    "收發狀態",
    "收文日期",
