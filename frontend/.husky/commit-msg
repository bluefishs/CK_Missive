#!/bin/sh
# ============================================================
# Commit Message 格式驗證（commitlint）
# ============================================================
# 格式：<type>: <description>
# Types: feat, fix, refactor, docs, test, chore, perf, ci
# ============================================================

cd "$(git rev-parse --show-toplevel)/frontend" || exit 1
npx --no -- commitlint --edit "$1"
