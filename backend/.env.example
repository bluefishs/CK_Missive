# .env.example for backend
# Copy this file to .env and fill in your actual values.

# --- Critical Settings ---
# A long, random string used for signing JWTs. Must be at least 32 characters.
# Generate one using: openssl rand -hex 32
SECRET_KEY=

# Your PostgreSQL database connection string
DATABASE_URL=postgresql+asyncpg://ck_user:ck_password@localhost:5434/ck_documents

# --- Optional Settings ---
# Google OAuth 2.0 Client ID for backend validation
GOOGLE_CLIENT_ID=

# --- Application Settings ---
# Set to True for development to see more detailed logs
DEBUG=False

# Database echo for SQLAlchemy (prints all SQL statements)
DATABASE_ECHO=False

# Allowed hosts for FastAPI
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Authentication & Permission Settings ---
# ðŸ”’ Set to False for production to enable full authentication
# Set to True only for local development without authentication
AUTH_DISABLED=False

# Google OAuth allowed domains (comma-separated, empty = allow all)
# Example: example.com,company.org
GOOGLE_ALLOWED_DOMAINS=

# Auto-activate new users (set to False for production to require admin approval)
AUTO_ACTIVATE_NEW_USER=False

# Default role for new users
DEFAULT_USER_ROLE=user
